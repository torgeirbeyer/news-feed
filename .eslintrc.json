{
  "extends": "standard",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "google": true,
    "axios": true
  },
  "parserOptions": { 
    "ecmaVersion": 6
  },
  "rules": {
    "space-before-function-paren": ["error", "never"],
    "quotes": ["error", "double"],
    "semi": [2, "always"],
    "comma-dangle": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "no-console": 0,
    "no-var": "error",
    "prefer-const": "error",
    "no-multiple-empty-lines": "off",
    "max-len": ["error", 120]
  }
}
