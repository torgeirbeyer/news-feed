<h2>Sign Up</h2>
<form class="form" action="/auth/signup" method="POST" autocomplete="off">
  <label class="text" for="email">Email</label>
  <input class="text-input" id="email" type="email" name="email">

  <label class="text" for="password">Password</label>
  <input class="text-input" id="password" type="password" name="password">

  <button class="button text" type="submit">
    Sign Up
  </button>
</form>

<a href="/auth/twitter/callback">Sign up with Twitter</a>

<br><br>
<% if (typeof errorMessage !== "undefined") { %>
  <div class="error-message"><%= errorMessage %></div>
<% } %>
<br><br>

<p class="account-message">
  Or click <a href="login">here</a> if you already have an account.
</p>

