<div class="signup-user">
  <h4 class="signup-header">Sign up</h4>
    <form class="form" action="/auth/signup" method="POST">
      <input class="text-input" id="email" type="text" name="email" placeholder="Email">
      <input class="text-input" id="password" type="password" name="password" placeholder="Password">

      <button class="button text" id="signup-bt" type="submit">
        Sign up
      </button>
    </form>
  

  <% if (typeof errorMessage !== "undefined") { %>
    <div class="error-message"><%= errorMessage %></div>
  <% } %>

  <p class="account-message">
    Or click <a href="login">here</a> if you already have an account.
  </p>
</div>

